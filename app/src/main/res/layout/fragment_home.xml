<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/centerButton"
        android:layout_width="44dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="600dp"
        android:background="@drawable/osm_ic_center_map" />



    <FrameLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="#FAF7F7"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">


        <FrameLayout
            android:id="@+id/bottomLayout1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/playButton"
                android:layout_width="108dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical|right"
                android:background="@drawable/ic_play_foreground" />

            <TextView
                android:id="@+id/timeCounter"
                android:layout_width="219dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal|center_vertical|left"
                android:text="00:00:00"
                android:textSize="50sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottomLayout2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/caloriesBurned"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="kcal: 0"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/distanceKm"
                android:layout_width="99dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal|center_vertical|left"
                android:text="km: 0"
                android:textSize="25sp" />
            <!--

            <TextView
                android:id="@+id/kmPerHour"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal|center_vertical|right"
                android:text="km/s: 0"
                android:textSize="25sp" />
                -->
        </FrameLayout>


    </FrameLayout>
</RelativeLayout>

